pipeline {
    agent any
    environment {
    ANSIBLE_CONFIG="${WORKSPACE}/deploy/ansible.cfg"
  }

     parameters {
       string(name: 'inventory_file', defaultValue: 'dev',  description: 'This is the inventory file for the environment to deploy configuration')
    }

    stages {
      stage('SCM Checkout') {
        steps {
            git(branch: 'main', url:'https://github.com/Romok1/ansible-config-mgt.git')
        }
      }
      stage('Execute Ansible') {
        steps {
            echo "${ANSIBLE_CONFIG}"
            echo 
            echo
            ansiblePlaybook credentialsId: 'private-key', disableHostKeyChecking: true, installation: 'Ansiblejenk', inventory: "inventory/${params.inventory_file}", playbook: 'playbooks/site.yml'
        }
      }
    }
}   
